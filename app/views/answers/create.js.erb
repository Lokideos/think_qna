$('.new-answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
var answerNotice = '';

<% if answer.persisted? %>
  $('.answers').append('<%= j render answer %>');
  $('#answer_body').val('');
  answerNotice = 'Answer was successfully created.';
<% else %>
  answerNotice = "Answer wasn't created; check your input.";
<% end %>

$('.notice').html(answerNotice);